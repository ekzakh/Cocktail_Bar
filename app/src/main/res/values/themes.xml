<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CocktailBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CocktailBar" parent="Base.Theme.CocktailBar" />

    <style name="Text">
        <item name="fontFamily">@font/didact_gothic_regular</item>
    </style>

    <style name="InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue</item>
        <item name="hintTextColor">@color/blue</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="FilledButton" parent = "Widget.Material3.Button">
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="OutlineButton" parent = "Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Text</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="strokeColor">@color/blue</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/cocktails_corner_radius</item>
    </style>
</resources>
